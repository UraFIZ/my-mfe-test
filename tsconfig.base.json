{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@my-mfe-test/shared": ["shared/src/index.ts"],
      "@my-mfe-test/shared/*": ["shared/src/*"]
    },
    "strictNullChecks": true,
    "strictFunctionTypes": false
  },
  "exclude": ["node_modules", "tmp"]
}
